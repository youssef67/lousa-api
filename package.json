{
  "name": "lousa-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "../twitchDriver"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node --import=ts-node/register --import=hot-hook/register ace serve --hmr",
    "test:migration": "NODE_ENV=test node ace migration:run",
    "test": "node ace test",
    "dev:setup": "docker-compose -p lousa_dev -f docker-compose.db.dev.yml up -d",
    "test:setup": "docker-compose -p lousa_test -f docker-compose.db.test.yml up -d",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "users:generate": "node ace users:generate",
    "spaces:generate": "node ace spaces:generate",
    "generate:all": "node ace users:generate 2 3 && node ace spaces:generate",
    "setup:api": "node ace setup:api",
    "playlists:generate": "node ace playlists:generate",
    "favorites:generate": "node ace favorites:generate",
    "generate:playlists": "node ace playlists:generate && node ace favorites:generate"
  


  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#types/*": "./types/*.js",
    "#utils/*": "./utils/*.js",
    "#data/*": "./data/*.js",
    "#interfaces/*": "./app/interfaces/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0-beta.6",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^3.0.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "1.7.26",
    "@types/cookie-signature": "^1.1.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "hot-hook": "^0.3.1",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-maintained": "^10.9.4",
    "typescript": "~5.6"
  },
  "dependencies": {
    "@adonisjs/ally": "^5.0.2",
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/http-server": "^7.4.0",
    "@adonisjs/lucid": "^21.3.0",
    "@adonisjs/mail": "^9.2.2",
    "@adonisjs/transmit": "^2.0.2",
    "@vinejs/vine": "^2.1.0",
    "axios": "^1.7.9",
    "cookie-signature": "^1.2.2",
    "edge.js": "^6.2.0",
    "luxon": "^3.5.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "short-uuid": "^5.2.0",
    "Twitch-driver": "workspace:*",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  },
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  },
  "prettier": "@adonisjs/prettier-config"
}
